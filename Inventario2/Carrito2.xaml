<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Inventario2.Carrito2"
             >
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="HOME"  Clicked="ToolbarItem_Clicked_1"/>
        <ToolbarItem Text="          " />
        
        <ToolbarItem Text="Borrar Carrito" Clicked="ToolbarItem_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <AbsoluteLayout VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand">
        <Image AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1"
               Source="nuevofondo.png" Aspect="Fill"/>
        <StackLayout
		AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
            <StackLayout Padding="37,20,37,30">
                <StackLayout
            Padding="85,20,85,30">
                    <Grid ColumnSpacing="0" HorizontalOptions="FillAndExpand">
                        <Grid.ColumnDefinitions Width = "100"/>
                        <Image Source="tache.png" HorizontalOptions="End" HeightRequest="60" WidthRequest="60" Grid.Column="0"/>
                        <Label
                            VerticalOptions="Center"
                 FontFamily="Montserrat-Bold"
                TextColor="White"
                            FontSize="30"
			    HorizontalOptions="Center"
			    Text="CARRITO" 
			    FontAttributes="Bold"
			    StyleId="Titulo"/>
                        

                    </Grid>


                </StackLayout>
                <Grid
	         ColumnSpacing="10">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <Label
                        FontFamily="Montserrat-Bold"
                Text="Producto:" 
				FontAttributes="Bold"
                TextColor="White"
                Grid.Column="0"/>

                    <Label
                        FontFamily="Montserrat-Bold"
                TextColor="White"
                Text="Marca:" 
				FontAttributes="Bold"
                Grid.Column="1"/>
                    <Label
                        FontFamily="Montserrat-Bold"
                TextColor="White"
                Text="Modelo:" 
				FontAttributes="Bold"
                Grid.Column="2"/>
                    <Label
                        FontFamily="Montserrat-Bold"
                TextColor="White"
                Text="Cantidad:" 
				FontAttributes="Bold"
                Grid.Column="3"/>
                </Grid>

                <ScrollView>
                    <ListView x:Name="postListView" ItemSelected="PostListView_ItemSelected" BackgroundColor="Gray">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Orientation="Horizontal">
                                        <Grid>
                                            <Grid.ColumnDefinitions>

                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="100"/>

                                            </Grid.ColumnDefinitions>

                                            <Label  Text="{Binding producto}" TextColor="White" Grid.Column="0"/>
                                            <Label Text="{Binding marca}" TextColor="White" Grid.Column="1"/>
                                            <Label Text="{Binding modelo}" TextColor="White" Grid.Column="2"/>
                                            <Label Text="{Binding cantidad}" TextColor="White" Grid.Column="3"/>
                                            <Button ImageSource="beliminar.png" HeightRequest="70" Clicked="Button_Clicked" Grid.Column="4"/>

                                        </Grid>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollView>

                <Button
            x:Name="acept"
            TextColor="Red"
            HorizontalOptions="End"
            VerticalOptions="End"
			ImageSource="baceptar.png"
			Clicked="acept_Clicked"
			/>
            </StackLayout>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>