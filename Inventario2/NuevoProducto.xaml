                    <Image
                        x:Name="imagen"
                        Aspect="AspectFit"
                        HeightRequest="150"
                        Source="marco de foto.png"
                        WidthRequest="100"/>
                    <Button
                TextColor="Red"
			            ImageSource="bfoto.png"
			            x:Name="foto_nuevop"
                        WidthRequest="150"
                HeightRequest="87"
			            VerticalOptions="Center"
			            FontAttributes="Bold"
                        Clicked="Foto_nuevop_Clicked"/>

                    <Button
                TextColor="Red"
                        WidthRequest="150"
                HeightRequest="87"
			     ImageSource="baceptar.png"
			     Clicked="AgregarP"
			     HorizontalOptions="End"
			     FontAttributes="Bold"
			     StyleId="Ok"/>

                </StackLayout>
            </ScrollView>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>